<!DOCTYPE html>
<html>
<head>
  <title><%= beer.name %></title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('header') %>
  <main class="container mt-5">
    <div class="row">
      <div class="col-md-6">
        <img class="img-fluid" src="<%= beer.image %>" alt="<%= beer.name %>">
      </div>
      <div class="col-md-6">
        <h1 class="display-4"><%= beer.name %></h1>
        <p class="lead"><%= beer.description %></p>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Brand: <%= beer.brand %></li>
          <li class="list-group-item">Type: <%= beer.type %></li>
          <li class="list-group-item">Alcohol Content: <%= beer.alcoholContent %> %</li>
          <li class="list-group-item">Price: $<%= beer.price.toFixed(2) %></li>
          <li class="list-group-item">In Stock: <%= beer.inStock ? 'Yes' : 'No' %></li>
          <li class="list-group-item">Quantity: <%= beer.quantity %></li>
        </ul>
        <form action="/cart/add/<%= beer._id %>" method="post" class="mt-3">
          <button class="add-to-cart-btn" type="submit">Add to Cart</button>
        </form>
      </div>
    </div>
  </main>
  <%- include('footer') %>
  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    function addToCart(beerId) {
      // Implement the logic to add the beer to the cart
      alert(`Beer with ID ${beerId} added to cart!`);
    }
  </script>
</body>
</html>
