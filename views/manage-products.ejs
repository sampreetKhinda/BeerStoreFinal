<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('header') %>
  <div class="container mt-5">
    <form method="get" action="/admin/product/create" class="mb-4">
      <button type="submit" class="add-to-cart-btn">Add New Item</button>
    </form>
    
    <div id="crud-operations">
      <!-- The content for CRUD operations will be included here based on the route -->
      <h2>Item List</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% items.forEach(item => { %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.category %></td>
        <td><%= item.price %></td>
        <td>
          <a href="/admin/product/edit/<%= item._id %>" class="btn btn-warning btn-sm">Edit</a>
          <form action="/admin/product/delete/<%= item._id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <%- include('footer') %>
</body>
</html>
